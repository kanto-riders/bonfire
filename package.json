{
  "name": "nuxt-typescript-starter",
  "version": "1.0.4",
  "dependencies": {
    "axios": "^0.16.2",
    "gsap": "^1.20.3",
    "nuxt": "^1.0.0-rc9",
    "nuxt-class-component": "^1.1.2",
    "tachyons": "^4.9.0",
    "vue-class-component": "^5.0.2",
    "vue-property-decorator": "^5.3.0",
    "vuex-class": "^0.2.0"
  },
  "devDependencies": {
    "@9renpoto/tslint-config": "^3.4.0",
    "@types/node": "^8.0.14",
    "husky": "^0.14.3",
    "lint-staged": "^5.0.0",
    "markdownlint-cli": "^0.5.0",
    "npm-run-all": "^4.1.2",
    "prettier": "^1.8.2",
    "ts-loader": "^2.3.0",
    "tslint": "^5.8.0",
    "typescript": "^2.4.1"
  },
  "lint-staged": {
    "*.js": [
      "prettier --write --single-quote --parser babylon",
      "git add"
    ],
    "*.ts": [
      "prettier --parser typescript --write",
      "tslint --fix",
      "git add"
    ],
    "*.md": [
      "markdownlint"
    ]
  },
  "private": true,
  "scripts": {
    "build": "nuxt build",
    "dev": "nuxt",
    "generate": "nuxt generate",
    "lint": "run-p lint:*",
    "lint:md": "markdownlint *.md",
    "lint:ts": "tslint {module,store,plugin}/**/*.ts",
    "precommit": "lint-staged",
    "start": "nuxt start",
    "test": "npm run lint"
  }
}
